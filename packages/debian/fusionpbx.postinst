#!/bin/sh
set -e

case "$1" in
  configure)
    for
      /usr/share/nginx/www/fusionpbx
    do
      mkdir -p $x
      chown -R www-data:www-data $x
      chmod -R o-rwx,g+u $x
    done
    ;;
  abort-upgrade|abort-remove|abort-deconfigure)
    ;;
  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

#DEBHELPER#
exit 0
